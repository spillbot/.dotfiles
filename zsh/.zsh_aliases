alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# shell
alias chmody="chmod +x"
alias yo="echo $USER@:$HOST"
alias bat="batcat"
alias c="clear"
alias vi="nvim"
alias svi="sudo -e"
alias h="cd ~/"

# Hyprland
alias hconfig="nvim ~/.config/hypr/hyprland.conf"

# python
alias py="python3"
alias venv="source venv/bin/activate"
alias grepy="ps aux | grep python"

# zsh setup
alias zalias="nvim ~/.dotfiles/zsh/.zsh_aliases"
alias zource="source ~/.zshrc"

# nvidia commands
alias nvid="watch -n 2 nvidia-smi"
alias smi="nvidia-smi"

# ollama commands
alias golama="cd ~/.ollama/"
alias olla="ollama --model magnum --prompt ':'"

# github
alias gadd="git add ."
alias gommit="git commit -m"
alias gush="git push origin"
